{
  "name": "kameo-monorepo",
  "private": true,
  "workspaces": [
    "shared/*",
    "packages/*"
  ],
  "packageManager": "npm@10.9.0",
  "scripts": {
    "start": "npm --prefix ./dev-playground run dev",
    "dev": "npm run start",
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@kameo/core",
    "build:extensions": "turbo run build --filter=@kameo/extension*",
    "clean:packages": "rm -rf ./packages/*/dist",
    "clean:packs": "rm -rf ./packages/*/*.tgz",
    "reset": "npm run clean:packages && npm run clean:packs && rm -rf ./**/.cache && rm -rf ./**/node_modules && rm -rf ./package-lock.json && npm install",
    "turbo": "turbo"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "rollup": "^4.28.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "turbo": "^2.3.3"
  }
}
