{
  "name": "@kameo/core",
  "description": "Web form editor framework powered by ProseMirror",
  "version": "0.0.35",
  "homepage": "https://kameo.dev",
  "license": "MIT",
  "keywords": [
    "kameo",
    "wysiwyg",
    "rich text",
    "form builder",
    "text editor",
    "prosemirror"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
