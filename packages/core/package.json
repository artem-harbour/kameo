{
  "name": "@kameo/core",
  "description": "Kameo library powered by ProseMirror and Tiptap",
  "version": "0.0.12",
  "license": "",
  "keywords": [
    "kameo",
    "prosemirror",
    "tiptap",
    "editor"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style/prosemirror.css": "./style/prosemirror.css",
    "./style/theme.css": "./style/theme.css"
  },
  "sideEffects": [
    "./style/prosemirror.css",
    "./style/main.css"
  ],
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "@tiptap/core": "^2.11.7"
  },
  "devDependencies": {
    "@tiptap/pm": "^2.11.7",
    "lit": "^3.2.1"
  },
  "peerDependencies": {
    "@tiptap/pm": "^2.11.7",
    "lit": "^3.2.1"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c"
  }
}
