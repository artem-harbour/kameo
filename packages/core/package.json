{
  "name": "@kameo/core",
  "description": "Web form editor framework powered by ProseMirror",
  "version": "0.0.14",
  "license": "MIT",
  "keywords": [
    "kameo",
    "form editor",
    "text editor",
    "prosemirror"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style/prosemirror.css": "./style/prosemirror.css",
    "./style/theme.css": "./style/theme.css"
  },
  "sideEffects": [
    "./style/prosemirror.css",
    "./style/theme.css"
  ],
  "files": [
    "src",
    "dist",
    "style"
  ],
  "dependencies": {
    "@tiptap/core": "^3.0.0-beta.5"
  },
  "devDependencies": {
    "@kameo/pm": "^0.0.14",
    "lit": "3.3.0"
  },
  "peerDependencies": {
    "@kameo/pm": "^0.0.14",
    "lit": "3.3.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c"
  }
