  "dependencies": {
    "@tiptap/core": "^3.2.0"
  },
  "devDependencies": {
    "@awesome.me/webawesome": "^3.0.0-beta.4",
    "@kameo/pm": "^0.0.35",
    "lit": "3.3.0",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "@awesome.me/webawesome": "^3.0.0-beta.4",
    "@kameo/pm": "^0.0.35",
    "lit": "3.3.0",
    "uuid": "^11.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kameojs/kameo",
    "directory": "packages/core"
